@page
@model FizzBuzzDatabase.Pages.GameSessions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Game Session Details</h1>

<div>
    <h3>Game Name: @Model.GameSession.Game.GameName</h3>
    <p><strong>Player Name:</strong> @Model.GameSession.Player.Name</p>
    <p><strong>Start Time:</strong> @Model.GameSession.StartTime</p>
    <p><strong>End Time:</strong> @Model.GameSession.EndTime</p>
    <p><strong>Correct Answers:</strong> @Model.GameSession.CorrectAnswers</p>
    <p><strong>Incorrect Answers:</strong> @Model.GameSession.IncorrectAnswers</p>
</div>

<a asp-page="Index" class="btn btn-primary">Back to List</a>