@page
@model FizzBuzzDatabase.Pages.Games.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Game</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Game.GameName" class="control-label"></label>
        <input asp-for="Game.GameName" class="form-control" />
        <span asp-validation-for="Game.GameName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Game.Author" class="control-label"></label>
        <input asp-for="Game.Author" class="form-control" />
        <span asp-validation-for="Game.Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Game.MinRange" class="control-label"></label>
        <input asp-for="Game.MinRange" class="form-control" />
        <span asp-validation-for="Game.MinRange" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Game.MaxRange" class="control-label"></label>
        <input asp-for="Game.MaxRange" class="form-control" />
        <span asp-validation-for="Game.MaxRange" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Game.Timer" class="control-label"></label>
        <input asp-for="Game.Timer" class="form-control" />
        <span asp-validation-for="Game.Timer" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

