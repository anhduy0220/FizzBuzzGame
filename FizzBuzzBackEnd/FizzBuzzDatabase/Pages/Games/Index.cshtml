@page
@model FizzBuzzDatabase.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Games</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Game</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Game Name</th>
            <th>Author</th>
            <th>Min Range</th>
            <th>Max Range</th>
            <th>Timer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.GameName</td>
                <td>@game.Author</td>
                <td>@game.MinRange</td>
                <td>@game.MaxRange</td>
                <td>@game.Timer</td>
                <td>
                    <a asp-page="Details" asp-route-id="@game.Id" class="btn btn-info">Details</a>
                    <a asp-page="Edit" asp-route-id="@game.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@game.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>