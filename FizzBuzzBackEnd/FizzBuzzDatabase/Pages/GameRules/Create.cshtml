@page
@model FizzBuzzDatabase.Pages.GameRules.CreateModel

<h2>Create Game Rule</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="GameRule.Divisor"></label>
        <input asp-for="GameRule.Divisor" class="form-control" />
        <span asp-validation-for="GameRule.Divisor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GameRule.Word"></label>
        <textarea asp-for="GameRule.Word" class="form-control"></textarea>
        <span asp-validation-for="GameRule.Word" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
