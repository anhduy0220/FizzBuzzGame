@page
@model FizzBuzzDatabase.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Page("Create")" class="btn btn-primary">Create New Player</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.Players)
        {
            <tr>
                <td>@player.Id</td>
                <td>@player.Name</td>
                <td>@player.Email</td>
                <td>
                    <a href="@Url.Page("Details", new { id = player.Id })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Page("Edit", new { id = player.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Page("Delete", new { id = player.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>