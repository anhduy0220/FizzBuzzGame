@page
@model FizzBuzzDatabase.Pages.Players.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Player.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Player.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Player.Email</dd>
    </dl>
</div>

<div>
    <a href="@Url.Page("./Edit", new { id = Model.Player.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Page("./Delete", new { id = Model.Player.Id })" class="btn btn-danger">Delete</a>
    <a href="@Url.Page("./Index")" class="btn btn-secondary">Back to List</a>
</div>