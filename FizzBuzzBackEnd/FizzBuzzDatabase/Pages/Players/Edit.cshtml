@page
@model FizzBuzzDatabase.Pages.Players.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Player</h4>
<hr />

<form method="post">
    <input type="hidden" asp-for="Player.Id" />
    <div class="form-group">
        <label asp-for="Player.Name" class="control-label"></label>
        <input asp-for="Player.Name" class="form-control" />
        <span asp-validation-for="Player.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Player.Email" class="control-label"></label>
        <input asp-for="Player.Email" class="form-control" />
        <span asp-validation-for="Player.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Page("./Index")" class="btn btn-secondary">Back to List</a>
    </div>
</form>